<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="myConnection" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Actividad.Actividad</class>
    <class>Clase.Clase</class>
    <class>Cuponera.Cuponera</class>
    <class>CuponeraXActividad.CuponeraXActividad</class>
    <class>Institucion.Institucion</class>
    <class>Profesor.Profesor</class>
    <class>Registro.Registro</class>
    <class>Socio.Socio</class>
    <class>Usuario.Usuario</class>
    <properties>
      <property name="showSql" value="false"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/my_gym?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
